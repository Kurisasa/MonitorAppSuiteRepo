<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/blue_pale"
    android:padding="0dp"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:id="@+id/BEN_imagex"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/boy" />

    <RelativeLayout
        android:id="@+id/BEN_top"
        android:layout_below="@id/BEN_imagex"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            android:id="@+id/BEN_txtNum"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            style="@style/GreyCircleSmall" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="beneficary name"
            android:id="@+id/BEN_txtName"
            style="@style/Title2TextStyleBlack"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"

            android:layout_toRightOf="@+id/BEN_txtNum" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/BEN_bottom"
        android:layout_below="@id/BEN_top"
        android:layout_marginLeft="56dp"
        android:visibility="gone"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email@address"
            android:layout_marginTop="12dp"
            android:id="@+id/BEN_txtEmail"

            style="@style/TextStyle"
            android:textStyle="normal"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="099 999 9999"
            android:id="@+id/BEN_txtCell"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/BEN_txtEmail"
            style="@style/TextStyleBlue" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/BEN_layoutCount"
        android:layout_width="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginRight="8dp"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/BEN_txtHappy"
            android:text="@string/no"
            android:background="@drawable/xred_oval"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/BEN_txtHappyLabel"
            android:text="Happy Letter"
            style="@style/TextStyleGrey"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@id/BEN_txtHappy"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</RelativeLayout>