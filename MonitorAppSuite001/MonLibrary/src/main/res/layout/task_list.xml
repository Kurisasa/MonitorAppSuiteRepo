<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:background="@color/grey"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/TL_top"
        android:background="@color/beige_pale"
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/TL_title"
            style="@style/Title2TextStyleGrey"
            android:text="@string/tasks"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/TL_editLayout"
        android:padding="8dp"
        android:background="@color/white"
        android:visibility="visible"
        android:layout_below="@id/TL_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/TL_editName"
            android:lines="2"
            android:hint="@string/enter_task_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/TL_numberLayout"
            android:layout_below="@id/TL_editName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <NumberPicker
                android:id="@+id/TL_numberPicker"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></NumberPicker>

            <TextView
                android:id="@+id/TL_label"
                android:text="@string/enter_task_number"
                style="@style/Title3TextStyleGrey"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/TL_numberPicker"
                android:layout_marginRight="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <LinearLayout
            android:layout_below="@id/TL_numberLayout"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/TL_btnCancel"
                android:text="@string/cancel"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/TL_btnSave"
                android:text="@string/save"
                android:background="@drawable/xred_box"
                android:layout_weight="2"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </LinearLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/TL_list"
        android:layout_marginTop="8dp"
        android:layout_below="@id/TL_editLayout"
        android:background="@color/white"
        android:dividerHeight="@dimen/mon_divider"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/TL_count"
        style="@style/RedCircle"
        android:text="33"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>