<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:background="@color/grey"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/FC_top"
        android:background="@color/beige_pale"
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/FC_title"
            style="@style/Title2TextStyleGrey"
            android:text="@string/client_list"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        </RelativeLayout>

    <ListView
        android:id="@+id/FC_list"
        android:layout_below="@id/FC_top"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginTop="8dp"
        android:dividerHeight="5dp"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/FC_count"
        style="@style/BlackCircle"
        android:text="99"
        android:elevation="@dimen/mon_padding"
        android:layout_marginTop="24dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>