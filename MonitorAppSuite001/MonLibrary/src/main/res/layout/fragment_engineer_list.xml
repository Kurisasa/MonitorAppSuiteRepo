<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="@color/grey"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/EC_top"
        android:background="@color/beige_pale"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/EC_title"
            style="@style/Title2TextStyleGrey"
            android:text="@string/engineer_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        </RelativeLayout>

    <ListView
        android:id="@+id/EC_list"
        android:layout_below="@id/EC_top"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginTop="15dp"
        android:dividerHeight="5dp"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/EC_count"
        style="@style/BlackCircle"
        android:text="99"
        android:layout_marginTop="36dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>