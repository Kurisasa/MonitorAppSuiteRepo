<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card_view"
        android:padding="@dimen/mon_padding"
        android:layout_gravity="center"
        tools:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_marginBottom="4dp"
            android:padding="@dimen/mon_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:id="@+id/PSN_imagex"
                android:scaleType="centerCrop"

                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:alpha="0.4"
                android:src="@drawable/boy" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                android:layout_below="@id/PSN_imagex"
                android:id="@+id/PSN_txtNum"
                android:layout_marginTop="@dimen/mon_padding"
                android:layout_marginLeft="16dp"
                style="@style/GreyCircleSmall" />

            <RelativeLayout
                android:id="@+id/PSN_top"
                android:layout_toRightOf="@id/PSN_imagex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt"
                android:id="@+id/PSN_txtName"
                style="@style/TextStyleBlue"
                android:layout_marginLeft="@dimen/mon_padding"
                android:layout_marginTop="@dimen/mon_padding"
                 />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Staff Type"
                android:id="@+id/PSN_txtStaffType"
                android:layout_marginLeft="@dimen/mon_padding"
                android:layout_marginTop="@dimen/mon_divider"
                android:layout_below="@+id/PSN_txtName"
                style="@style/TextStyleRedSmall"
                 />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/PSN_layoutCount"
                android:layout_below="@+id/PSN_imagex"
                android:layout_alignLeft="@id/PSN_imagex"
                android:layout_width="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="4dp"
                android:layout_height="wrap_content">



                <TextView
                    android:id="@+id/PSN_txtCounter"
                    android:text="@string/zero"
                    style="@style/RedCircle"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/PSN_txtCounterLabel"
                    android:text="@string/status_updates"
                    style="@style/TextStyleGrey"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_toLeftOf="@id/PSN_txtCounter"
                    android:layout_height="wrap_content" />
            </RelativeLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>