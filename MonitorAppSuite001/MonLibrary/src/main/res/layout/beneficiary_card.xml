<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="400dp"
        android:layout_height="400dp"
        card_view:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_margin="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:id="@+id/BEN_imagex"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/house" />

            <RelativeLayout
                android:layout_below="@id/BEN_imagex"
                android:layout_width="match_parent"
                android:padding="4dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zero"
                    android:id="@+id/BEN_txtNum"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    style="@style/GreyCircleSmall" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beneficiary Name"
                    android:id="@+id/BEN_txtName"
                    style="@style/Title2TextStyleBlue"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignBaseline="@id/BEN_txtNum"
                    android:layout_toRightOf="@+id/BEN_txtNum" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/BEN_layoutCount"
                android:layout_width="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/BEN_txtHappy"
                    android:text="@string/no"
                    style="@style/RedCircleSmall"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/BEN_txtCounterLabel"
                    android:text="@string/happy_letter"
                    style="@style/TextStyleSmall"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_toLeftOf="@id/BEN_txtHappy"
                    android:layout_height="wrap_content" />


            </RelativeLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>