<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:background="@color/grey"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/BC_top"
        android:background="@color/beige_pale"
        android:padding="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/BC_title"
            style="@style/Title2TextStyleGrey"
            android:text="@string/bennie_list"
            android:layout_marginLeft="8dp"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_below="@id/BC_title"
            android:background="@color/white"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/BC_projectName"
                android:text="Project Name Here"
                style="@style/Title3TextStyleBlue"
                android:layout_marginLeft="16dp"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </RelativeLayout>

    <ListView
        android:id="@+id/BC_list"
        android:layout_below="@id/BC_top"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginTop="8dp"
        android:dividerHeight="5dp"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/BC_count"
        style="@style/BlackCircle"
        android:text="99"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>