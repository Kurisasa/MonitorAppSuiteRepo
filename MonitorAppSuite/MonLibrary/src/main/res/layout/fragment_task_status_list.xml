<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="@color/grey"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/FTST_top"
        android:background="@color/blue_pale"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/FTST_title"
            style="@style/Title2TextStyleGrey"
            android:text="Task Status List"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        </RelativeLayout>

    <ListView
        android:id="@+id/FTST_list"
        android:layout_below="@id/FTST_top"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:dividerHeight="5dp"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/FTST_count"
        style="@style/RedCircle"
        android:text="99"
        android:layout_marginTop="30dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>